<%# Page-specific styles kept local to this view %>
<style>
  /* Arcade title styling with cross-browser text clipping */
  .game-title {
    text-align: center;
    font-family: 'Bangers', cursive;
    font-size: 128px;

    /* Fallback color if clipping is unsupported */
    color: #ffffff;

    /* Gradient fill (gets overriden by the background gradient so this line is redundent) */
    background: linear-gradient(to bottom, #ffcc00, #ff3300);

    /* Cross-browser clipping */
    -webkit-background-clip: text;  /* Chrome/Safari */
    background-clip: text;          /* Standard */
    -webkit-text-fill-color: transparent; /* Chrome/Safari */
    color: transparent;                     /* Firefox */

    text-shadow: 3px 3px 0 #ffffff,
                 -3px -3px 0 #5cfaf5,
                  3px -3px 0 #41f2ec,
                 -3px  3px 0 #69edf9;

    margin-top: 20px;
    margin-bottom: 120px;
  }

  /* Center and standardize text for this page */
  .page-wrap {
    text-align: center;
    color: #ffffff;
    font-family: Arial, sans-serif;
  }

  /* Ensure inputs are readable while typing */
  .page-wrap input[type="text"],
  .page-wrap input[type="search"],
  .page-wrap input[type="password"],
  .page-wrap input[type="email"] {
    background-color: #ffffff;
    color: #000000;                  /* force black text at all times */
    border: 2px solid #000000;
    padding: 6px 8px;
    border-radius: 4px;
    font-size: 18px;
  }

  /* Buttons consistent with your current palette */
  .page-wrap input[type="submit"],
  .page-wrap button {
    background-color: rgb(242, 96, 70);
    color: #ffffff;
    border: 2px solid #000000;
    padding: 8px 16px;
    font-size: 16px;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .page-wrap input[type="submit"]:hover,
  .page-wrap button:hover {
    background-color: #629deb;
    border-color: #000000;
  }

  /* Paragraphs and labels readable on dark bg */
  .page-wrap p,
  .page-wrap label {
    font-size: 18px;
  }
</style>

<div class="page-wrap">
  <h1 class="game-title">Alien Translations</h1>

  <p><strong>Scrambled:</strong> <%= (session[:scrambled] || @puzzle&.scrambled_word).to_s %></p>
  <p><strong>Attempts:</strong> <%= session[:attempts].to_i %></p>

  <%# Opt out of Turbo so the page does a full HTML submit (avoids stream replace) %>
  <%= form_with url: alien_translation_path, method: :post, local: true, data: { turbo: false } do |f| %>
    <%= f.label :attempt, "Your guess:" %>
    <%= f.text_field :attempt, autofocus: true %>
    <%= f.submit "Check" %>
  <% end %>

  <%# button_to generates its own <form>; disable Turbo there as well %>
  <%= button_to "Get a Hint", alien_translation_hint_path, method: :post, form: { data: { turbo: false } } %>

  <% if flash[:notice].present? %>
    <p style="color: lightgreen"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert].present? %>
    <p style="color: #ff8080"><%= flash[:alert] %></p>
  <% end %>

  <div id="hint">
    <% if @hint.present? %>
      <p><strong>Hint:</strong> <%= @hint %></p>
    <% end %>
  </div>
</div>
