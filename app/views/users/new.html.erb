<h1 class="mt-4">Create your account</h1>

<%= form_with model: @user, url: signup_path, local: true, class: "mt-3" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :school %>
    <%= f.text_field :school, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

  <%= f.submit "Sign Up", class: "btn btn-primary" %>
<% end %>
