<div class="profile-container">
  <h1>Edit Profile</h1>

  <%= form_with model: @user, url: user_path(@user), method: :patch, html: {class: "edit-user"} do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username %>

    <%= form.label :bio %>
    <%= form.text_area :bio, rows: 4 %>

    <%= form.label :school %>
    <%= form.text_field :school %>

    <%= form.label :avatar, "Avatar URL" %>
    <%= form.text_field :avatar %>

    <%= form.submit "Save Changes" %>
  <% end %>

  <%= link_to "Cancel", user_path(@user), class: "button" %>
</div>
